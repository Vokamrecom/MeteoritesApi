{
  "ConnectionStrings": {
    "Default": "Host=localhost;Port=5432;Database=MeteoritesDb;Username=postgres;Password=123"
  },
  "Hangfire": {
    "Queue": "meteorite-sync",
    "WorkerCount": 1
  },
  "NASAData": {
    "SourceUrl": "https://raw.githubusercontent.com/biggiko/nasa-dataset/refs/heads/main/y77d-th95.json",
    "RequestTimeoutSeconds": 30
  },
  "SyncJob": {
    "CronExpression": "*/30 * * * *",
    "BatchSize": 500
  },
  "Caching": {
    "SummaryTtlMinutes": 2
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Hangfire": "Information"
    }
  }
}
